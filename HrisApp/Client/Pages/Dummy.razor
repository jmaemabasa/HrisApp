@page "/dummylist"
@using HrisApp.Client.Global;
@using HrisApp.Shared.Models.Dummy;
@inject DummyGlobal _globaldummy
@inject IToastService _toastService

<MudTable Class="stable" Items="dummylist" Context="dummylist" FixedHeader="true" Elevation="0" Height="620px" HorizontalScrollbar="true" Dense="true" Hover="true" Bordered="false" Striped="true">
    <ToolBarContent>
        <MudSpacer />
        <MudSpacer />
     </ToolBarContent>
     <HeaderContent>
         <MudTh Class="col-6" Style="background: #e9ecef; font-weight: bold;">Areas</MudTh>
         <MudTh Class="col-6" Style="background: #e9ecef; font-weight: bold;">Action</MudTh>
     </HeaderContent>
     <RowTemplate>
        <MudTd DataLabel="">@dummylist.UserId</MudTd>
        <MudTd DataLabel="">@dummylist.TableName</MudTd>

     </RowTemplate>
 </MudTable>
@code {
    #nullable disable
    List<AuditLogsDummy> dummylist = new List<AuditLogsDummy>();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await Task.Delay(1000);
            dummylist = _globaldummy.GetAuditLogsList();
            // dummylist = _globaldummy.AuditLogs_List;
            _toastService.ShowError(dummylist.Count().ToString());

        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
        }
    }
}
