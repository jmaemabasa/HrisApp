        _pri.PriAward = "";
        _pri.PriSchoolYear = "";
        primaryList = await EducationService.GetPrimarylist(VerifyCode);
        PrimaryOpen = false;
    }

    protected override async Task OnParametersSetAsync()
    {
        try
        {
            primaryList = await EducationService.GetPrimarylist(VerifyCode);
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
        }
