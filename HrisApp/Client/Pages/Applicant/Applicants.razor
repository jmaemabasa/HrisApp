@page "/applicants"

@inject IApplicantService AppService
@inject GlobalConfigService GlobalConfigService
@inject StateService StateService
@inject NavigationManager _navigationManager

@attribute [Authorize(Roles = "System Administrator, HR")]

<PageTitle>Applicants</PageTitle>
<div class="mb-5">
    <div class="d-flex flex-row mt-5 justify-content-between align-items-center">
        <span style="font-size: x-large;font-weight: 600;color: #424242; font-family: 'Poppins', sans-serif;">Applicant List</span>
        <AuthorizeView Roles="HR, System Administrator">
            <Authorized>
                @* <div class="d-flex gap-3">
                    <button class="Btn" @onclick="OnExporttoExcel">
                        @if (!_processing)
                        {
                            <div class="sign"><MudIcon Icon="@Icons.Material.Rounded.ImportExport"></MudIcon></div>
                            <div class="text">Export to Excel</div>
                        }
                        else
                        {
                            <div class="sign"> <MudProgressCircular Color="Color.Warning" Class="ms-n1" Size="Size.Small" Indeterminate="true" /></div>
                            <div class="text">Exporting</div>
                        }

                    </button>
                    <button class="Btn" @onclick="OpenUploadDialog">
                        <div class="sign"><MudIcon Icon="@Icons.Material.Rounded.Upload"></MudIcon></div>
                        <div class="text">Upload File</div>
                    </button>
                    <MudButton OnClick="@CreateNewEmployee" Variant="Variant.Filled" Size="Size.Medium" StartIcon="@Icons.Material.Rounded.PersonAdd" Class="btnadd"> Employee</MudButton>

                </div> *@
            </Authorized>
        </AuthorizeView>
    </div>
</div>

<div class="box w-auto">
    @if (_applicantList == null || _applicantList.Count == 0)
    {
        <MudProgressLinear Color="Color.Secondary" Indeterminate="true" Class="my-7" hidden="@_isVisible" />

        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="auto" hidden="@_isVisible" />
        <MudCardContent hidden="@_isVisible">
            <MudSkeleton Width="30%" Height="42px;" />
            <MudSkeleton Width="80%" />
            <MudSkeleton Width="100%" />
        </MudCardContent>
        <MudCardActions hidden="@_isVisible">
            <MudSkeleton Width="64px" Height="40px" Class="ml-2" />
            <MudSkeleton Width="105px" Height="40px" Class="ml-3" />
        </MudCardActions>
        @if (_isVisible == true)
        {
            <div class="divnodata">
                <MudImage Src="images/nodata.png" Alt="No Data" Width="332" Height="220" Class="rounded-lg" />
                <span class="nodataspan">No Data Available</span>
            </div>
        }
    }
    else
    {
        <MudTable Class="stable" Height="690px" Items="@_applicantList" Context="employeeee" SortLabel="Sort By" FixedHeader="true" Elevation="0" HorizontalScrollbar="true" Dense="true" Hover="true" Bordered="false" Striped="true" Filter="new Func<ApplicantT,bool>(FilterFunc1)" @bind-SelectedItem="@_selectedItem1" Virtualize="true">
            <HeaderContent>
                <MudTh Style="background: #e9ecef; font-weight: bold; font-size: 16px;">
                    <MudTableSortLabel SortBy="new Func<ApplicantT, object>(x=>x.App_FirstName)">
                        Full Name
                    </MudTableSortLabel>
                </MudTh>
                <MudTh Style="background: #e9ecef; font-weight: bold; font-size: 16px;">
                    @* <MudTableSortLabel SortBy="new Func<ApplicantT, object>(x=>x.EmployeeNo)"> *@
                    Position Applied
                    @*  *@
                </MudTh>
                <MudTh Style="background: #e9ecef; font-weight: bold; font-size: 16px;">Source of Application</MudTh>
                <MudTh Style="background: #e9ecef; font-weight: bold; font-size: 16px;">
                    <MudTableSortLabel SortBy="new Func<ApplicantT, object>(x=>x.DateApplied)">
                        Date Applied
                    </MudTableSortLabel>
                </MudTh>
                @* <MudTh Style="background: #e9ecef; font-weight: bold; font-size: 16px; text-align:center;">
            <MudTableSortLabel InitialDirection="SortDirection.Ascending" SortBy="new Func<ApplicantT, object>(x=>x.StatusId)">
            Status
            </MudTableSortLabel>
            </MudTh> *@
                <MudTh Style="background: #e9ecef; font-weight: bold; font-size: 16px;">Action</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Full Name">
                    <div class="d-flex flex-row align-items-center gap-3">
                        @* <div class="d-flex align-items-center">

                    </div> *@
                        <div>
                            <div class="flex-column">
                                <div style="font-weight: bold;">@GlobalConfigService.CapitalizeFirstLetter(employeeee.App_FirstName)  @(employeeee.App_MiddleName != "" ? $"{employeeee.App_MiddleName[0].ToString().ToUpper()}." : "")  @GlobalConfigService.CapitalizeFirstLetter(employeeee.App_LastName)</div>
                                <div style="font-size: 13px !important;">@employeeee.App_Email</div>
                            </div>
                        </div>
                    </div>

                </MudTd>
                <MudTd DataLabel="Position">@employeeee.App_PosApplied1</MudTd>
                <MudTd DataLabel="Position">@employeeee.App_SourceApp</MudTd>
                <MudTd DataLabel="Division">
                    @employeeee.DateApplied.ToString("MM/dd/yyyy")
                </MudTd>
                <MudTd>
                    <MudTooltip Text="View Details">
                        <MudIconButton OnClick="(() => ShowApplicant(employeeee.Id))" Class="btnShow" Icon="@Icons.Material.Rounded.Info" aria-label="Show"></MudIconButton>
                    </MudTooltip>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager PageSizeOptions="new int[] { 9, 25, int.MaxValue }" InfoFormat="@($"Right {@_infoFormat}")" HorizontalAlignment="HorizontalAlignment.Right" />
            </PagerContent>
        </MudTable>
    }
</div>