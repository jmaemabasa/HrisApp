@page "/saemployee/add"

<PageTitle>Add Employee</PageTitle>
<div class="topnav d-flex justify-content-end align-items-center z-60">
    <MudButton OnClick="@_saaddEmployeeVM.backbtn" Size="Size.Medium">Back</MudButton>
</div>
<div class="tabdiv">

    <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" @ref="@_saaddEmployeeVM.tabs" @bind-ActivePanelIndex="@_saaddEmployeeVM.activeIndex" Centered=true>

        @* ====================================================================================  JOB  ==================================================================================== *@
        <MudTabPanel TabContent="@_saaddEmployeeVM.tabHeader(0)">
            <MudGrid Spacing="5">
                <MudItem xs="12" sm="2">
                    <span class="spantitle">Image</span>
                    @if (_saaddEmployeeVM.imgBase64 == "./images/addIconImage.png")
                    {
                        <MudFileUpload T="IBrowserFile" OnFilesChanged="@_saaddEmployeeVM.uploadImage" Accept="image/*" capture Style="margin-top: 30px">
                            <ButtonTemplate>
                                <MudButton Class="@_saaddEmployeeVM.imguploadclass" DisableElevation HtmlTag="label" Variant="Variant.Outlined" for="@context">
                                    <div style="height: 240px; display: flex; justify-content: center; align-items: center; ">
                                        <MudImage Src="@_saaddEmployeeVM.imgBase64" Style="height: 100px; width: 100px; " />
                                    </div>
                                </MudButton>
                            </ButtonTemplate>
                        </MudFileUpload>
                    }
                    else
                    {
                        <MudFileUpload T="IBrowserFile" OnFilesChanged="@_saaddEmployeeVM.uploadImage" Accept="image/*" capture Style="margin-top: 30px">
                            <ButtonTemplate>
                                <MudButton Class="w-100 btnimagewithimage" DisableElevation HtmlTag="label" for="@context">
                                    <div style="height: 240px; display: flex; justify-content: center; align-items: center;  border-radius: 20px; padding:10px 0 10px 0">
                                        <MudImage Src="@_saaddEmployeeVM.imgBase64" Style="height: 95%; width: auto; max-width:100%; border-radius: 20px; border: none; " />
                                    </div>
                                </MudButton>
                            </ButtonTemplate>
                        </MudFileUpload>
                    }
                </MudItem>
                <MudItem xs="12" sm="10">
                    <EditForm Model="_saaddEmployeeVM.employee" OnValidSubmit="@ActivateAddressField" class="d-flex flex-column flex-grow-1" style="margin-top: 13px;">
                        <DataAnnotationsValidator />
                        <MudItem xs="12">
                            <span class="spantitle">Personal Details</span>
                            <MudCard Class="mdcard1" Elevation="0">
                                <MudCardContent>
                                    <MudGrid Class="d-flex align-items-center">
                                        <MudItem xs="12" sm="4">
                                            <MudText Typo="Typo.body2">First Name</MudText>
                                            <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.employee.FirstName" />
                                            <ValidationMessage For="@(() => _saaddEmployeeVM.employee.FirstName)" class="mb-2 valmessage" />
                                        </MudItem>
                                        <MudItem xs="12" sm="4">
                                            <MudText Typo="Typo.body2">Middle Name</MudText>
                                            <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.employee.MiddleName" />
                                            <ValidationMessage For="@(() => _saaddEmployeeVM.employee.MiddleName)" class="mb-2 valmessage" />
                                        </MudItem>
                                        <MudItem xs="12" sm="3">
                                            <MudText Typo="Typo.body2">Last Name</MudText>
                                            <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.employee.LastName" />
                                            <ValidationMessage For="@(() => _saaddEmployeeVM.employee.LastName)" class="mb-2 valmessage" />
                                        </MudItem>
                                        <MudItem xs="12" sm="1">
                                            <MudText Typo="Typo.body2">Suffix</MudText>
                                            <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.employee.Extension" />
                                            <ValidationMessage For="@(() => _saaddEmployeeVM.employee.Extension)" class="mb-2 valmessage" />
                                        </MudItem>
                                        <MudItem xs="12" sm="4">
                                            <MudText Typo="Typo.body2">Birthdate (mm/dd/yyyy)</MudText>
                                            <MudDatePicker Class="@_saaddEmployeeVM.clsBday" DisableUnderLine @bind-Date="@_saaddEmployeeVM.bday" Mask="@(new DateMask("MM/dd/yyyy"))" DateFormat="MM/dd/yyyy" Editable="true" Margin="Margin.Dense" />
                                            <span class="mud-input-helper-text mud-input-error">@_saaddEmployeeVM.mesBday</span>
                                        </MudItem>
                                        <MudItem xs="12" sm="4">
                                            <MudText Typo="Typo.body2">Age</MudText>
                                            <MudTextField Class="txf" DisableUnderLine Value="@_saaddEmployeeVM.CalculateAge(_saaddEmployeeVM.bday)" ReadOnly="true" Margin="Margin.Dense" />
                                        </MudItem>
                                        <MudItem xs="12" sm="4">
                                            <MudText Typo="Typo.body2">Gender</MudText>
                                            <MudSelect Class="@_saaddEmployeeVM._slectClasssGender" DisableUnderLine @bind-Value="_saaddEmployeeVM.employee.GenderId" Margin="Margin.Dense">
                                                <MudSelectItem Value=0 Disabled>---Select---</MudSelectItem>
                                                @foreach (var gender in _saaddEmployeeVM.GendersL)
                                                {
                                                    <MudSelectItem Value="@gender.Id">@gender.Name</MudSelectItem>
                                                }
                                            </MudSelect>
                                        </MudItem>
                                        <MudItem xs="12" sm="4">
                                            <MudText Typo="Typo.body2">Civil Status</MudText>
                                            <MudSelect Class="@_saaddEmployeeVM._slectClasssCV" @bind-Value="_saaddEmployeeVM.employee.CivilStatusId" DisableUnderLine Margin="Margin.Dense">
                                                @*//gibago nako class*@
                                                <MudSelectItem Value=0 Disabled>---Select---</MudSelectItem>
                                                @foreach (var cs in _saaddEmployeeVM.CivilStatusL)
                                                {
                                                    <MudSelectItem Value="@cs.Id">@cs.Name</MudSelectItem>
                                                }
                                            </MudSelect>
                                        </MudItem>
                                        <MudItem xs="12" sm="4">
                                            <MudText Typo="Typo.body2">Nationality</MudText>
                                            <InputText Class="@_saaddEmployeeVM._txfieldClasssNat" @bind-Value="_saaddEmployeeVM.employee.Nationality" />
                                            <ValidationMessage For="@(() => _saaddEmployeeVM.employee.Nationality)" class="mb-2 valmessage" />
                                        </MudItem>
                                        <MudItem xs="12" sm="4">
                                            <MudText Typo="Typo.body2">Religion</MudText>
                                            <MudSelect @bind-Value="_saaddEmployeeVM.employee.ReligionId" Class="@_saaddEmployeeVM._slectClasssReli" DisableUnderLine Margin="Margin.Dense">
                                                <MudSelectItem Value=0 Disabled>---Select---</MudSelectItem>
                                                @foreach (var rel in _saaddEmployeeVM.ReligionsL)
                                                {
                                                    <MudSelectItem Value="@rel.Id">@rel.Name</MudSelectItem>
                                                }
                                            </MudSelect>
                                        </MudItem>
                                        <MudItem xs="12" sm="3">
                                            <MudText Typo="Typo.body2">Mobile No.</MudText>
                                            <MudNumericField HideSpinButtons="true" @bind-Value="_saaddEmployeeVM.employee.MobileNumber" Class="@_saaddEmployeeVM._txfieldClasssMN" DisableUnderLine Margin="Margin.Dense" Adornment="Adornment.Start" AdornmentText="+63" MaxLength="10" For="@(() => _saaddEmployeeVM.employee.MobileNumber)" />
                                        </MudItem>
                                        <MudItem xs="12" sm="3">
                                            <MudText Typo="Typo.body2">Email</MudText>
                                            <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.employee.Email" />
                                            <ValidationMessage For="@(() => _saaddEmployeeVM.employee.Email)" class="mb-2 valmessage" />
                                        </MudItem>
                                        <MudItem xs="12" sm="3">
                                            <MudText Typo="Typo.body2">Weight(kg)</MudText>
                                            <InputNumber Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.employee.Weight" />
                                        </MudItem>
                                        <MudItem xs="12" sm="3">
                                            <MudText Typo="Typo.body2">Height(cm)</MudText>
                                            <InputNumber Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.employee.Height" />
                                        </MudItem>

                                        <MudItem xs="12" sm="6">
                                            <MudText Typo="Typo.body2">PHIC No.</MudText>
                                            <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.payroll.PhilHealthNum" MaxLength="12" />
                                            <ValidationMessage For="@(() => _saaddEmployeeVM.payroll.PhilHealthNum)" class="mb-2 valmessage" />
                                        </MudItem>
                                        <MudItem xs="12" sm="6">
                                            <MudText Typo="Typo.body2">HDMF No.</MudText>
                                            <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.payroll.HDMFNum" MaxLength="12" />
                                            <ValidationMessage For="@(() => _saaddEmployeeVM.payroll.HDMFNum)" class="mb-2 valmessage" />
                                        </MudItem>
                                        <MudItem xs="12" sm="6">
                                            <MudText Typo="Typo.body2">SSS No.</MudText>
                                            <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.payroll.SSSNum" MaxLength="12" />
                                            <ValidationMessage For="@(() => _saaddEmployeeVM.payroll.SSSNum)" class="mb-2 valmessage" />
                                        </MudItem>
                                        <MudItem xs="12" sm="6">
                                            <MudText Typo="Typo.body2">TIN No.</MudText>
                                            <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.payroll.TINNum" MaxLength="12" />
                                            <ValidationMessage For="@(() => _saaddEmployeeVM.payroll.TINNum)" class="mb-2 valmessage" />
                                        </MudItem>
                                        <MudItem xs="12" Class="d-flex justify-content-center mt-5">
                                            <MudButton EndIcon="@Icons.Material.Rounded.KeyboardArrowDown" Class="btnnext" ButtonType="ButtonType.Submit">NEXT</MudButton>
                                        </MudItem>
                                    </MudGrid>
                                </MudCardContent>
                            </MudCard>
                        </MudItem>
                    </EditForm>
                    @* <MudItem xs="12">
                    <div class="d-flex flex-grow-1 justify-content-center">
                    <MudDivider DividerType="DividerType.Middle" Class="my-2 w-25 justify-content-center" Style="border: 2px solid #78909C; border-radius: 5px;" />
                    </div>
                    </MudItem> *@
                    <div class="@displayAdd" style="width: 100%;">
                        <EditForm Model="_saaddEmployeeVM.address" OnValidSubmit="@(() => Activate(1))" class="d-flex flex-column flex-grow-1" style="margin-top: 13px;">
                            <DataAnnotationsValidator />
                            <span class="spantitle">Address</span>
                            <MudCard Class="mdcard1" Elevation="0">
                                <MudCardContent>
                                    <span class="spantitle">Present Address</span>
                                    <div class="d-flex flex-column flex-grow-1 mb-3">
                                        <div class="d-flex flex-wrap gap-lg-4 gap-sm-2 mb-2">
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">(Unit/House/Building/Street Number, Street Name, Barangay Name)</MudText>
                                                <InputText id="bb" Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.address.CurrentAdd" />
                                                <ValidationMessage For="@(() => _saaddEmployeeVM.address.CurrentAdd)" class="mb-2 valmessage" />
                                            </div>
                                        </div>
                                        <div class="d-flex flex-wrap gap-lg-4 gap-sm-2 mb-2">
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">City</MudText>
                                                <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.address.CurrentCity" />
                                                <ValidationMessage For="@(() => _saaddEmployeeVM.address.CurrentCity)" class="mb-2 valmessage" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Province</MudText>
                                                <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.address.CurrentProvince" />
                                                <ValidationMessage For="@(() => _saaddEmployeeVM.address.CurrentProvince)" class="mb-2 valmessage" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">ZipCode</MudText>
                                                <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.address.CurrentZipCode" />
                                                <ValidationMessage For="@(() => _saaddEmployeeVM.address.CurrentZipCode)" class="mb-2 valmessage" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Country</MudText>
                                                <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.address.CurrentCountry" />
                                                <ValidationMessage For="@(() => _saaddEmployeeVM.address.CurrentCountry)" class="mb-2 valmessage" />
                                            </div>
                                        </div>
                                        <span class="spantitle">Permanent Address</span>
                                        <div class="d-flex flex-wrap gap-lg-4 gap-sm-2 mb-2">
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">(Unit/House/Building/Street Number, Street Name, Barangay Name)</MudText>
                                                <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.address.PermanentAdd" />
                                                <ValidationMessage For="@(() => _saaddEmployeeVM.address.PermanentAdd)" class="mb-2 valmessage" />
                                            </div>
                                        </div>
                                        <div class="d-flex flex-wrap gap-lg-4 gap-sm-2 mb-2">
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">City</MudText>
                                                <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.address.PermanentCity" />
                                                <ValidationMessage For="@(() => _saaddEmployeeVM.address.PermanentCity)" class="mb-2 valmessage" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Province</MudText>
                                                <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.address.PermanentProvince" />
                                                <ValidationMessage For="@(() => _saaddEmployeeVM.address.PermanentProvince)" class="mb-2 valmessage" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">ZipCode</MudText>
                                                <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.address.PermanentZipCode" />
                                                <ValidationMessage For="@(() => _saaddEmployeeVM.address.PermanentZipCode)" class="mb-2 valmessage" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Country</MudText>
                                                <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.address.PermanentCountry" />
                                                <ValidationMessage For="@(() => _saaddEmployeeVM.address.PermanentCountry)" class="mb-2 valmessage" />
                                            </div>
                                        </div>
                                    </div>

                                    <MudItem xs="12">
                                        <div class="d-flex flex-grow-1 justify-content-center">
                                            <MudDivider DividerType="DividerType.Middle" Class="my-2 w-25 justify-content-center" Style="border: 2px solid #78909C; border-radius: 5px;" />
                                        </div>
                                    </MudItem>

                                    <MudItem xs="12">
                                        <span class="spantitle">Person to Notify in Case of Emergency</span>
                                        <MudCard Class="mdcard1" Elevation="0">
                                            <MudCardContent>
                                                <div class="d-flex flex-column flex-grow-1 mb-3">
                                                    <div class="d-flex flex-wrap gap-lg-4 gap-sm-2 mb-2 align-items-center">
                                                        <div class="flex-grow-1">
                                                            <MudText Typo="Typo.body2">Name</MudText>
                                                            <InputText Class="@_saaddEmployeeVM._txfieldClasssEN" @bind-Value="_saaddEmployeeVM.employee.EmerName" />
                                                            <ValidationMessage For="@(() => _saaddEmployeeVM.employee.EmerName)" class="mb-2 valmessage" />
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <MudText Typo="Typo.body2">Relationship</MudText>
                                                            <MudSelect @bind-Value="_saaddEmployeeVM.employee.EmerRelationshipId" Class="@_saaddEmployeeVM._slectClasssRela" DisableUnderLine Margin="Margin.Dense">
                                                                <MudSelectItem Value=0 Disabled>---Select---</MudSelectItem>
                                                                @foreach (var rel in _saaddEmployeeVM.EmerRelationshipsL)
                                                                {
                                                                    <MudSelectItem Value="@rel.Id">@rel.Name</MudSelectItem>
                                                                }
                                                            </MudSelect>
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <MudText Typo="Typo.body2">Address</MudText>
                                                            <InputText Class="@_saaddEmployeeVM._txfieldClasssEA" @bind-Value="_saaddEmployeeVM.employee.EmerAddress" />
                                                            <ValidationMessage For="@(() => _saaddEmployeeVM.employee.EmerAddress)" class="mb-2 valmessage" />
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <MudText Typo="Typo.body2">Mobile #</MudText>
                                                            <MudNumericField HideSpinButtons="true" @bind-Value="_saaddEmployeeVM.employee.EmerMobNum" Class="@_saaddEmployeeVM._txfieldClasssEMN" DisableUnderLine Margin="Margin.Dense" Adornment="Adornment.Start" AdornmentText="+63" MaxLength="10" For="@(() => _saaddEmployeeVM.employee.EmerMobNum)" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </MudCardContent>
                                        </MudCard>
                                    </MudItem>
                                    <MudItem xs="12" Class="d-flex justify-content-end mt-5">
                                        <MudButton EndIcon="@Icons.Material.Rounded.NavigateNext" Class="btnnext" ButtonType="ButtonType.Submit">NEXT</MudButton>
                                    </MudItem>
                                </MudCardContent>
                            </MudCard>
                        </EditForm>
                    </div>

                </MudItem>
            </MudGrid>
        </MudTabPanel>

        @* ====================================================================================  PERSONAL  ==================================================================================== *@
        <MudTabPanel TabContent="@_saaddEmployeeVM.tabHeader(1)">
            <MudGrid>
                <EditForm Model="@_saaddEmployeeVM.payroll" OnValidSubmit="@(()=> Activate(2))" class="d-flex flex-column flex-grow-1" style="margin-top: 13px;">
                    <DataAnnotationsValidator />
                    <MudItem xs="12" Class="mt-3 paddingitem">
                        <span class="spantitle">Work Information</span>
                        <MudCard Class="mdcard1" Elevation="0">
                            <MudCardContent>
                                <div class="row mb-3">
                                    <div class="col-md-3">
                                        <MudText Typo="Typo.body2">Company ID No.</MudText>
                                        <InputText Class="@txtClassCID" @bind-Value="_saaddEmployeeVM.employee.EmployeeNo" />
                                        <ValidationMessage For="@(() => _saaddEmployeeVM.employee.EmployeeNo)" class="mb-2" />
                                    </div>
                                    <div class="col-md-3">
                                        <MudText Typo="Typo.body2">Biometric Id No.</MudText>
                                        <InputText Class="txf1 w-100 mt-1" @bind-Value="_saaddEmployeeVM.payroll.BiometricID" />
                                        <ValidationMessage For="@(() => _saaddEmployeeVM.payroll.BiometricID)" class="mb-2 valmessage" />
                                    </div>
                                    <div class="col-md-3">
                                        <MudText Typo="Typo.body2">Area of Assignment</MudText>
                                        <MudSelect Class="@slectClasssAA" @bind-Value="_saaddEmployeeVM.employee.AreaId" DisableUnderLine Margin="Margin.Dense">
                                            <MudSelectItem Value=0 Disabled>---Select---</MudSelectItem>
                                            @foreach (var area in _saaddEmployeeVM.AreasL)
                                            {
                                                <MudSelectItem Value="@area.Id">@area.Name</MudSelectItem>
                                            }
                                        </MudSelect>
                                    </div>
                                    <div class="col-md-3">
                                        <MudText Typo="Typo.body2">Status</MudText>
                                        <MudSelect Class="@slectClasssSS" @bind-Value="_saaddEmployeeVM.employee.StatusId" DisableUnderLine Margin="Margin.Dense">
                                            <MudSelectItem Value=0 Disabled>---Select---</MudSelectItem>
                                            @foreach (var status in _saaddEmployeeVM.StatusL.Where(s => s.Id == 1))
                                            {
                                                <MudSelectItem Value="@status.Id">@status.Name</MudSelectItem>
                                            }
                                        </MudSelect>
                                    </div>
                                </div>
                                <div class="d-flex flex-column flex-grow-1 mb-3">
                                    <div class="d-flex flex-wrap gap-lg-4 gap-sm-2 align-items-center">
                                        <div class="flex-grow-1">
                                            <MudText Typo="Typo.body2">Employment Status</MudText>
                                            <MudSelect Class="@slectClasssES" @bind-Value="_saaddEmployeeVM.employee.EmploymentStatusId" DisableUnderLine Margin="Margin.Dense">
                                                <MudSelectItem Value=0 Disabled>---Select---</MudSelectItem>
                                                @foreach (var status in _saaddEmployeeVM.EmploymentStatusL)
                                                {
                                                    <MudSelectItem Value="@status.Id">@status.Name</MudSelectItem>
                                                }
                                            </MudSelect>
                                        </div>
                                        @if (_saaddEmployeeVM.employee.EmploymentStatusId == 1)
                                        {
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Date Hired (mm/dd/yyyy)</MudText>
                                                <MudDatePicker Class="txf" DisableUnderLine Date="@_saaddEmployeeVM.DateHired" DateChanged="@_saaddEmployeeVM.HandleDateHiredChanged" Margin="Margin.Dense" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Regularization Date (mm/dd/yyyy)</MudText>
                                                <MudDatePicker Class="txf" @bind-Date="@_saaddEmployeeVM.RegularDate" DisableUnderLine Margin="Margin.Dense" />
                                            </div>
                                        }
                                        else if (_saaddEmployeeVM.employee.EmploymentStatusId == 2)
                                        {
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Date Hired (mm/dd/yyyy)</MudText>
                                                <MudDatePicker DateChanged="@_saaddEmployeeVM.HandleDateHiredChanged" Date="@_saaddEmployeeVM.DateHired" Class="txf" DisableUnderLine Margin="Margin.Dense" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Probation Start Date (mm/dd/yyyy)</MudText>
                                                <MudDatePicker @bind-Date="@_saaddEmployeeVM.ProbStart" Class="txf" DisableUnderLine Margin="Margin.Dense" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Probation End Date (mm/dd/yyyy)</MudText>
                                                <MudDatePicker @bind-Date="@_saaddEmployeeVM.ProbEnd" Class="txf" DisableUnderLine Margin="Margin.Dense" />
                                            </div>
                                        }
                                        else if (_saaddEmployeeVM.employee.EmploymentStatusId == 3)
                                        {
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Date Hired (mm/dd/yyyy)</MudText>
                                                <MudDatePicker @bind-Date="@_saaddEmployeeVM.DateHired" Class="txf" DisableUnderLine Margin="Margin.Dense" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Casual Start Date (mm/dd/yyyy)</MudText>
                                                <MudDatePicker @bind-Date="@_saaddEmployeeVM.CasualStart" Class="txf" DisableUnderLine Margin="Margin.Dense" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Casual End Date (mm/dd/yyyy)</MudText>
                                                <MudDatePicker @bind-Date="@_saaddEmployeeVM.CasualEnd" Class="txf" DisableUnderLine Margin="Margin.Dense" />
                                            </div>
                                        }
                                        else if (_saaddEmployeeVM.employee.EmploymentStatusId == 4)
                                        {
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Date Hired (mm/dd/yyyy)</MudText>
                                                <MudDatePicker @bind-Date="@_saaddEmployeeVM.DateHired" Class="txf" DisableUnderLine Margin="Margin.Dense" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Fixed Term Start Date (mm/dd/yyyy)</MudText>
                                                <MudDatePicker @bind-Date="@_saaddEmployeeVM.FixedStart" Class="txf" DisableUnderLine Margin="Margin.Dense" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <MudText Typo="Typo.body2">Fixed Term End Date (mm/dd/yyyy)</MudText>
                                                <MudDatePicker @bind-Date="@_saaddEmployeeVM.FixedEnd" Class="txf" DisableUnderLine Margin="Margin.Dense" />
                                            </div>
                                        }
                                        else if (_saaddEmployeeVM.employee.EmploymentStatusId == 5)
                                        {
